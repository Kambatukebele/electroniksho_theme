{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign social_icons = false
  endif
  if section.settings.enable_country_selector or section.settings.enable_language_selector
    assign language_country_selector = true
  endif
  if section.blocks.size > 0
    assign announcement_bar = true
  endif
-%}

{% if social_icons %}
  {{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{% endif %}
<section style="background-color: {%- if section.settings.bg-color_announcement_id -%} {{- section.settings.bg-color_announcement_id -}}{%- endif -%}; color: {%- if section.settings.text-color_announcement_id -%}{{- section.settings.text-color_announcement_id  -}}{%- endif -%}" class="w-full h-fit py-4 {% if section.settings.show_line_separator %} border {% endif %}">
  <div class="container">
    {% for block in section.blocks %}
        {%- case block.type -%}
          {%- when "announcement" -%}
            <div class="w-full mySlides hidden">
              <a class="block text-center font-openSans text-sm font-normal lg:text-base" href="{{ block.settings.url }}">
                {{ block.settings.text }}
              </a>
            </div>
        {%- endcase -%}
    {% endfor %}
    
  </div>
</section>
<script>
  let slideIndex = 0;
  showSlides();

  function showSlides() {
    let slides = document.getElementsByClassName("mySlides");
    for (let index = 0; index < slides.length; index++) {
      slides[index].classList.add("hidden")
    }
    slideIndex++
    if (slideIndex > slides.length) {
      slideIndex = 1;
    }
    slides[slideIndex - 1 ].classList.remove("hidden")
    slides[slideIndex - 1].classList.add("block")
    setTimeout(showSlides, 5000)

  }
</script>
