<section style="background: {{ section.settings.scrolling_color_bg_id }}; color: {{ section.settings.scroll_title_color_id }}" class="w-screen overflow-hidden h-16 flex justify-center items-center">
    <div class="no-scrollbar animate-scroll w-screen whitespace-nowrap flex gap-2">
        {% if section.blocks.size > 0 %}
            {% for scrollTitle in section.blocks %}
                {% case scrollTitle.type %}
                    {% when "scroll_title" %}
                        <div class="flex-none uppercase w-auto py-1 px-4">
                            {{ scrollTitle.settings.scroll_title_id }}
                        </div>
                {% endcase %}
            {% endfor %}
            {% else %}
                {% for i in (1..10) %}
                    <div class="flex-none uppercase w-auto py-1 px-4">
                        Get a $50 Gift Card on Purchase of $1000
                    </div>
                {% endfor %}
        {% endif %}
    </div>
</section>
{% style %}
    .no-scrollbar::-webkit-scrollbar{
        display:none;
    }
    .no-scrollbar{
        -ms-overflow-style:none; 
        scrollbar-width:none
    }
{% endstyle %}
{% schema %}
{
    "name": "Scrolling Content",
    "settings": [
        {
            "type": "color_background",
            "id": "scrolling_color_bg_id",
            "label": "Choose Your Background Color",
            "default": "#000000"
        },
        {
            "type": "color",
            "id": "scroll_title_color_id",
            "label": "Color Text",
            "default": "#ffffff"
        }
    ],
    "blocks": [
        {
            "name": "Scroll Title",
            "type": "scroll_title",
            "limit": 10,
            "settings": [
                {
                    "type": "text",
                    "id": "scroll_title_id",
                    "label": "Title",
                    "default": "I am a Scroll"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Scrolling Content"
        }
    ]
}
{% endschema %}