<section class="w-full h-fit border">
  <div class="container h-16 lg:h-[84px] flex justify-center items-center">
    <div class="w-full flex justify-between items-center gap-4 lg:py-4">
      <div class="w-full block xl:!hidden">
        <span class="block hamburger w-6 h-6 sm:w-8 sm:h-8 cursor-pointer">{% render 'icon-hamburger' %}
        </span>
        <span class="hidden close w-6 h-6 sm:w-8 sm:h-8  cursor-pointer">{% render 'icon-close' %}
        </span>
      </div>
      <div class="grow flex justify-start items-center w-full lg:w-[210px] lg:[50px] lg:grow-0">
        <a class="block lg:w-[{{ section.settings.logo_size }}px] lg:[50px]" href="">
          {%- if section.settings.logo_header != blank -%}
            <img class="lg:w-full lg:h-full lg:object-cover lg:object-center block" src="{{ section.settings.logo_header |  image_url: width:master  }}" alt="">
          {%- else -%}
            {{ shop.name |  upcase }}
          {%- endif -%}         
        </a>
      </div>
      <form class="hidden xl:!flex xl:justify-between xl:items-center">
        <div class="w-[473px] lg:h-[45px] lg:flex lg:justify-center lg:items-center rounded-lg">
          <input type="text" placeholder="Search" class="lg:outline-none lg:shadow-none lg:rounded-s-lg lg:border lg:w-full lg:h-full lg:pl-5">
        </div>
        <div style="background-color: {{ section.settings.header_icon_background_color }}; color: {{ section.settings.header_icon_color }}" class=" lg:flex lg:justify-center lg:items-center rounded-e-lg lg:w-[55px] lg:h-[45px]">
          {% render 'search-input' %}
        </div>
      </form>
      <div class="grow-0 flex justify-end items-center w-full gap-2 xl:justify-between xl:w-[370px]">
        <div class="xl:w-[155px] xl:h-fit xl:flex xl:justify-center xl:items-center xl:gap-3">
          <div class="hidden lg:!block lg:w-[30px] lg:h-[30px]">
            {% render 'person' %}
          </div>
          <div class="hidden xl:!block">
            <p class="xl:text-xs xl:text-black xl:font-normal xl:uppercase">Account</p>
            <p class="xl:text-sm xl:text-black xl:font-openSans xl:font-semibold">Log in / Sign in</p>
          </div>
        </div>
        <div class="w-7 relative flex justify-end items-center lg:w-16">
          <div class="w-7 h-7">
            {% render 'stars' %}
          </div>
          <div style="background-color: {{ section.settings.header_icon_background_color }}; color: {{ section.settings.header_icon_color }}" class="w-4 h-4 absolute -top-2 -right-1 flex justify-center items-center rounded-full text-xs lg:w-[18px] lg:h-[18px]">0</div>
        </div>
        <div class="relative w-7 flex justify-end items-center lg:w-16 xl:w-[145px] xl:h-fit xl:flex xl:justify-center xl:items-center xl:gap-3">
          <div class="relative">
            <div class="w-7 h-7">
              {% render 'basket' %}
            </div>
            <div style="background-color: {{ section.settings.header_icon_background_color }}; color: {{ section.settings.header_icon_color }}" class="w-4 h-4 absolute -top-2 -right-1 flex justify-center items-center rounded-full text-xs lg:w-[18px] lg:h-[18px]">
              0
            </div>
          </div>
          <div class="hidden xl:!block">
            <p class="xl:text-xs xl:text-black xl:font-normal xl:uppercase">Total</p>
            <p class="xl:text-sm xl:text-black xl:font-openSans xl:font-semibold">$0.00USD</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
