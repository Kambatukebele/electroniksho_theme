  </div>  
</section>

<script>
  const hamburgerMenu = document.getElementsByClassName('hamburger')[0];
  const closeMenu = document.getElementsByClassName('close')[0];
  const navigation = document.getElementsByClassName('navigation')[0];
  const shopCategory = document.getElementsByClassName('shopCategory')[0];
  const categories = document.getElementsByClassName('categories')[0];

  hamburgerMenu.addEventListener('click', () =>{
    navigation.classList.remove('-top-96');
    navigation.classList.add('top-12');
    hamburgerMenu.classList.remove('block');
    hamburgerMenu.classList.add('hidden');
    closeMenu.classList.remove('hidden');
    closeMenu.classList.add('block');
  });
  closeMenu.addEventListener('click', () =>{
    navigation.classList.remove('top-12');
    navigation.classList.add('-top-96');  
    hamburgerMenu.classList.remove('hidden');  
    hamburgerMenu.classList.add('block');
    closeMenu.classList.remove('block');
    closeMenu.classList.add('hidden');
  });

  //Shop Category
  shopCategory.addEventListener('click', () =>{
    if (categories.classList.contains('-left-[2450px]')) {
      categories.classList.remove('-left-[2450px]');
      categories.classList.add('left-0')
    }else{
      categories.classList.add('-left-[2450px]');
      categories.classList.remove('left-0')
    }
    
  })
</script>
{% schema %}
{
  "name": "t:sections.header.name",
  "class": "section-header",
  "max_blocks": 3,
  "settings": [
    {
      "type": "header",
      "content": "This is Top Header"
    },
    {
      "type": "image_picker",
      "id": "logo_header",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_size",
      "label": "Logo Size",
      "unit": "px",
      "max": 210,
      "min": 120,
      "step": 10,
      "default": 150
    },
    {
      "type": "color",
      "id": "header_icon_background_color",
      "label": "Search, Menu and Icon Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "header_icon_color",
      "label": "Search, Menu and Icon Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "This is Bottom Header"
    },
    {
      "type": "text",
      "id": "menu_selector_id",
      "default": "Shop by Departments",
      "label": "Menu Selector Text"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.header.settings.menu.label"
    }    
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ]
}
{% endschema %}
